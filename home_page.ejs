<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mental Health Wellness</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script
      defer
      src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
  </head>

  <body class="">
    <!-- Navbar -->
    <nav class="bg-[#6BBF59] p-6">
      <div class="container mx-auto flex justify-between items-center">
        <a href="#" class="text-white text-2xl font-bold uppercase">sahaj</a>
        <button id="menu-btn" class="text-white text-2xl md:hidden">☰</button>
        <ul id="menu" class="hidden md:flex space-x-20 text-white text-[1.2vw]">
          <li><a href="#" class="hover:text-gray-200">Home</a></li>
          <li><a href="/home/about" class="hover:text-gray-200">About</a></li>
          <li>
            <a href="/home/contact" class="hover:text-gray-200">Contact Us</a>
          </li>
          <li>
            <a
              href="login&registration.html"
              class="bg-white text-[#6BBF59] px-4 py-2 rounded-lg hover:bg-[#6BBF59] hover:text-white"
            >
              Login
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Welcome Section -->
    <section class="text-center py-12">
      <h1 class="text-4xl font-bold text-gray-800">Welcome to the Sahaj🌿</h1>
      <p class="text-gray-600 mt-2">
        Your mental wellness journey starts here.
      </p>
    </section>

    <!-- Carousel -->
    <div
      x-data="{ activeSlide: 0, slides: [
    'https://static.vecteezy.com/system/resources/previews/000/385/135/original/people-with-mental-health-concept-illustration-vector.jpg',
    'https://images.unsplash.com/photo-1502086223501-7ea6ecd79368?q=80&w=2038&auto=format&fit=crop',
    'https://ukfostering.org.uk/wp-content/uploads/2022/04/shutterstock_1816718933-scaled-2560x1280.jpg'
], next() { this.activeSlide = (this.activeSlide + 1) % this.slides.length }, 
prev() { this.activeSlide = (this.activeSlide - 1 + this.slides.length) % this.slides.length },
autoSlide() { setInterval(() => this.next(), 3000) },
init() { this.autoSlide() } }"
      class="relative w-full max-w-[90vw] h-[60vh] mx-auto overflow-hidden rounded-lg shadow-lg"
    >
      <!-- Image Container -->
      <div class="relative w-full h-full">
        <template x-for="(slide, index) in slides" :key="index">
          <img
            :src="slide"
            class="w-full h-full object-cover absolute inset-0 transition-opacity duration-1000 ease-in-out"
            :class="{ 'opacity-100': activeSlide === index, 'opacity-0': activeSlide !== index }"
          />
        </template>
      </div>

      <!-- Navigation Buttons -->
      <button
        @click="prev"
        class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-3 rounded-full shadow-lg"
      >
        ◀
      </button>
      <button
        @click="next"
        class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-3 rounded-full shadow-lg"
      >
        ▶
      </button>
    </div>

    <!-- Categories Section -->
    <section class="py-16 mt-20 h-[70vh] mb-20">
      <div class="container mx-auto text-center">
        <h2 class="text-4xl font-bold text-gray-800 mb-16">
          🌿 Explore Categories
        </h2>

        <div
          class="grid grid-cols-1 md:grid-cols-3 gap-20 px-4 max-w-6xl mx-auto"
        >
          <!-- Exercise -->
          <a
            href="#"
            class="bg-gradient-to-r from-green-400 to-green-600 p-8 rounded-lg shadow-xl text-white transform hover:scale-105 transition duration-300 flex flex-col items-center"
          >
            <img
              src="https://png.pngtree.com/png-clipart/20230927/original/pngtree-photo-men-doctor-physician-chest-smiling-png-image_13143575.png"
              alt="Exercise"
              class="w-32 h-32 object-cover rounded-full border-4 border-white mb-4"
            />
            <h3 class="text-2xl font-bold">🧑🏻‍⚕ Doctor</h3>
            <p class="mt-2 text-lg text-center">
              Enhance your well-being with expert healthcare
            </p>
          </a>

          <!-- Meditation -->
          <a
            href="meditation.html"
            class="bg-gradient-to-r from-blue-400 to-blue-600 p-8 rounded-lg shadow-xl text-white transform hover:scale-105 transition duration-300 flex flex-col items-center"
          >
            <img
              src="https://images.unsplash.com/photo-1506126613408-eca07ce68773?q=80&w=1999&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
              alt="Meditation"
              class="w-32 h-32 object-cover rounded-full border-4 border-white mb-4"
            />
            <h3 class="text-2xl font-bold">🧘 Meditation</h3>
            <p class="mt-2 text-lg text-center">
              Find inner peace and calmness.
            </p>
          </a>

          <!-- Therapy Centers -->
          <a
            href="therapy-centers.html"
            class="bg-gradient-to-r from-purple-400 to-purple-600 p-8 rounded-lg shadow-xl text-white transform hover:scale-105 transition duration-300 flex flex-col items-center"
          >
            <img
              src="https://images.unsplash.com/photo-1584515933487-779824d29309?q=80&w=400"
              alt="Therapy Centers"
              class="w-32 h-32 object-cover rounded-full border-4 border-white mb-4"
            />
            <h3 class="text-2xl font-bold">🏥 Therapy Centers</h3>
            <p class="mt-2 text-lg text-center">
              Find the best mental health centers nearby.
            </p>
          </a>
        </div>
      </div>
    </section>

    <section class="py-16 h-[75vh] bg-gradient-to-r from-green-200 to-blue-200">
      <div class="container mx-auto text-center">
        <h2 class="text-4xl font-bold text-gray-800 mb-8">
          💙 What Our Users Say
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 px-6">
          <!-- Testimonial 1 -->
          <div
            class="bg-white p-8 rounded-xl shadow-xl flex flex-col items-center transform hover:scale-105 transition duration-300"
          >
            <img
