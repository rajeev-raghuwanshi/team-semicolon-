            ></a>
            <a href="#" class="text-gray-400 hover:text-[#6BBF59] text-2xl"
              ><i class="fab fa-instagram"></i
            ></a>
          </div>
        </div>
      </div>

      <!-- Copyright -->
      <div class="text-center text-gray-500 mt-8 text-sm">
        © 2025 SemiColon; All rights reserved.
      </div>
    </footer>
    <script>
      document.getElementById("menu-btn").addEventListener("click", () => {
        document.getElementById("mobile-menu").classList.toggle("hidden");
      });

      // Set dynamic username
      document.addEventListener("DOMContentLoaded", function () {
        let loggedInUser = localStorage.getItem("loggedInUser");
        if (loggedInUser) {
          document.getElementById("username").innerText = loggedInUser;
        }
      });
    </script>
  </body>
</html>