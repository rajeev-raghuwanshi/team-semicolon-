<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page with Carousel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>

<body class="bg-gray-100">

    <!-- Navbar -->
    <nav class="bg-[#6BBF59] p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a href="#" class="text-white text-2xl font-bold">YourLogo</a>
            <button id="menu-btn" class="text-white text-2xl md:hidden">â˜°</button>
            <ul id="menu" class="hidden md:flex space-x-10 text-white">
                <li><a href="#" class="hover:text-gray-200">Home</a></li>
                <li><a href="#" class="hover:text-gray-200">About</a></li>
                <li><a href="#" class="hover:text-gray-200">Doctor</a></li>
                <li><a href="#" class="hover:text-gray-200">Contact Us</a></li>
                <li>
                    <a href="#" class="bg-white text-[#6BBF59] px-4 py-2 rounded-lg hover:bg-[#6BBF59] hover:text-white">
                        Login
                    </a>
                </li>
            </ul>
        </div>
        <div id="mobile-menu" class="hidden md:hidden bg-[#6BBF59] p-4 space-y-2">
            <a href="#" class="block text-white">Home</a>
            <a href="#" class="block text-white">About</a>
            <a href="#" class="block text-white">Doctor</a>
            <a href="#" class="block text-white">Contact Us</a>
            <a href="#" class="block bg-white text-[#6BBF59] px-4 py-2 rounded-lg border border-[#6BBF59] hover:bg-[#6BBF59] hover:text-white">
                Login
            </a>
        </div>
    </nav>

    <!-- Welcome Section -->
    <section class="text-center py-12">
        <h1 class="text-5xl font-bold text-gray-800">Welcome, <span id="username">User</span>! ðŸŒ¿</h1>
        <p class="text-gray-600 mt-2">Your mental wellness journey starts here.</p>
    </section>

    <!-- Carousel -->
    <div x-data="{ activeSlide: 0, slides: [
            'https://images.unsplash.com/photo-1529693662653-9d480530a697?q=80&w=1931&auto=format&fit=crop',
            'https://images.unsplash.com/photo-1502086223501-7ea6ecd79368?q=80&w=2038&auto=format&fit=crop',
            'https://images.unsplash.com/photo-1475503572774-15a45e5d60b9?q=80&w=2070&auto=format&fit=crop'
        ], next() { this.activeSlide = (this.activeSlide + 1) % this.slides.length }, 
        prev() { this.activeSlide = (this.activeSlide - 1 + this.slides.length) % this.slides.length },
        autoSlide() { setInterval(() => this.next(), 3000) },
        init() { this.autoSlide() } }"
        class="relative w-full max-w-[80vw] h-[65vh] mx-auto overflow-hidden rounded-lg shadow-lg">
        
        <template x-for="(slide, index) in slides" :key="index">
            <img :src="slide" class="w-full h-full object-cover absolute transition-opacity duration-1000 ease-in-out"
                :class="{ 'opacity-100': activeSlide === index, 'opacity-0': activeSlide !== index }">
        </template>

        <!-- Buttons -->
        <button @click="prev" class="absolute left-2 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full">â—€</button>
        <button @click="next" class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full">â–¶</button>
    </div>

    <script>
        document.getElementById('menu-btn').addEventListener('click', () => {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });

        // Set dynamic username
        document.getElementById('username').innerText = "Gaurav";
    </script>

</body>

</html>